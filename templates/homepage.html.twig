            </div>
        </div>
    </div>
    

{% endblock %}


{# nu de block content op in de main pagina vullen #}
{% block content %}
    {# Dit is commentaar #}

{# Loop #} 


    {% for record in data %}
        
        {%  if record.id is odd %}
            <div class="row">
        {%  endif  %}
        
            <div class="col-md-6">
            <section class="content">
            
            <img src="{{ record.afbeelding }}" style="width: 100%; height: 200px;">
            <div class="a">
            <h2><span style='color: #6e8722'>  {{ record.titel }}</span></h2>
            <span> {{record.beoordeling}} </span>
            <span class="star" data-id="{{ record.gerecht.id }}" data-value="1"><i class="far fa-star"></i></span>
            <span class="star" data-id="{{ record.gerecht.id }}" data-value="2"><i class="far fa-star"></i></span>
            <span class="star" data-id="{{ record.gerecht.id }}" data-value="3"><i class="far fa-star"></i></span>
            <span class="star" data-id="{{ record.gerecht.id }}" data-value="4"><i class="far fa-star"></i></span>
            <span class="star" data-id="{{ record.gerecht.id }}" data-value="5"><i class="far fa-star"></i></span>
            {{record.korte_omschrijving}}
            </div>
            {# sub-loop #}
            <ul>
                {% for ingr in record.ingredient %}
                {% endfor %}
            </ul>
            
            
            <a href="http://localhost/educom-verrukkulluk-1699269573/index.php?gerecht_id={{record.id}}&action=detail"><ul class="buttoncontainer"><h3>Smullen!</h3> </ul></a>
            <span class="b">
            <i class="fas fa-user-friends" style="color: #dc3439;"></i> 4 
            <i class="fas fa-euro-sign" style="color: #dc3439;"></i> {{record.prijs}}
            <i class="fas fa-fire" style="color: #dc3439;"></i> {{record.calories}} 
            </span>
            </section>
            </div>
            
            {%  if record.id is even %}
            </div>
            <BR><BR>  
            {%  endif  %} 
            
    {% endfor %}


    
     {# Dump #}
       {#<pre>
        {{ dump(data) }}
       </pre>#}

{% endblock %}
