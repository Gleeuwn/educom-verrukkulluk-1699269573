{# Opnemen van de "Main" file #}
{% extends "main.html.twig" %}


{% block header %}
<img src="assets/img/logo-v2.png"/>


    <div class="menu">
        <div class="menu-trigger"> <i class="fas fa-bars";></i>
            <div class="dropdown">
                
                    <img src="assets/img/verrukkulluk-logo-v2.png"/>
                    <h2>
                    <a href=""><span class="menulinks">Mijn favorieten</span></a> 
                    <a href=""><span class="menulinks">Mijn boodschappenlijst</span></a>
                    
